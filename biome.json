{
  "$schema": "https://biomejs.dev/schemas/2.2.3/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noNodejsModules": "off",
        "noUndeclaredDependencies": "off"
      },
      "performance": {
        "noBarrelFile": "off",
        "noReExportAll": "off"
      },
      "style": {
        "useEnumInitializers": "off",
        "noDefaultExport": "off",
        "useFilenamingConvention": {
          "level": "error",
          "options": {
            "filenameCases": [
              "export",
              "PascalCase",
              "camelCase",
              "snake_case"
            ],
            "strictCase": false
          }
        },
        "useNamingConvention": {
          "level": "warn",
          "options": {
            "conventions": [
              {
                "formats": ["camelCase", "CONSTANT_CASE", "snake_case"],
                "selector": {
                  "kind": "objectLiteralProperty"
                }
              }
            ],
            "strictCase": false
          }
        }
      },
      "suspicious": {
        "noAssignInExpressions": "off",
        "noShadowRestrictedNames": "off",
        "noThenProperty": "off",
        "noReactSpecificProps": "off",
        "noExplicitAny": "off"
      }
    }
  }
}
